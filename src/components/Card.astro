---
const { gradient, title, description, link } = Astro.props;
---

<a class={gradient + " md:min-w-[242px] sm:w-1/3 p-1 rounded-md"} href={link}>
  <div
    class="flex flex-col justify-start h-full  bg-gray-50 dark:bg-slate-900 rounded-md p-4 hover:bg-gray-100 dark:hover:bg-gray-800 prose dark:prose-invert"
  >
    <!-- content  -->
    <div class="flex flex-col grow">
      <h2 class="m-0 p-0">{title}</h2>
      <p class="p-0 m-0">
        {description}
      </p>
    </div>

    <!-- link -->
    <div class="flex flex-row items-center    gap-x-2 -mb-2">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25"></path>
      </svg>

      <p class="underline-offset-2 hover:underline">
        {link}
      </p>
    </div>
  </div>
</a>
